  "shortcuts": [
    {
      "name": "My Events",
      "short_name": "Events",
      "description": "View your upcoming events",
      "url": "/events",
      "icons": [
        {
          "src": "/static/icons/shortcut-events.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Create Event",
      "short_name": "Create",
      "description": "Create a new event",
      "url": "/organizer/events/create",
      "icons": [
        {
          "src": "/static/icons/shortcut-create.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Access your dashboard",
      "url": "/admin",
      "icons": [
        {
          "src": "/static/icons/shortcut-dashboard.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/static/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Event Management Dashboard"
    },
    {
      "src": "/static/screenshots/mobile-events.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Events View"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+eventmgmt",
      "url": "/event/%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/calendar": [".ics"],
        "text/csv": [".csv"]
      },
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "text/*"]
        }
      ]
    }
  }
}